package com.yanwanfu.servlet;

import java.io.IOException;
import java.io.PrintWriter;
import java.nio.charset.CharsetEncoder;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.google.gson.Gson;
import com.google.gson.JsonArray;
import com.google.gson.JsonObject;
import com.yanwanfu.bean.User;
import com.yanwanfu.service.UserService;

public class LoginServlet extends HttpServlet {

	private static final long serialVersionUID = 1L;
	private User user;
	private PrintWriter writer;

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		doPost(req, resp);
	}

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		//set header
		req.setCharacterEncoding("UTF-8");
		resp.setContentType("text/html;charset=UTF-8");	
		writer = resp.getWriter();
		
		// get parameter
		String username =req.getParameter("username");
		String password =req.getParameter("password");
		
		// user bean
		user = new User(username, password);
		
		JsonObject object;
		//check user
		if(new UserService().valiUser(user)){
			// write session
			object = new JsonObject();
			object.addProperty("id",new UserService().userId(user));
			object.addProperty("username", user.getUsername());			
			
			writer.write(object.toString());
			writer.flush();
			writer.close();
		}else{
			object = new JsonObject();
			object.addProperty("msg", "用户密码错误");
			writer.flush();
			writer.close();
		}
	}

	@Override
	public void destroy() {
		super.destroy();
	}
	

}
